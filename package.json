{
  "name": "agave-nv-coming-soon",
  "version": "1.0.0",
  "description": "A modern coming soon website for Agave New Ventures",
  "main": "index.html",
  "scripts": {
    "start": "npx serve . -p 3000",
    "build": "echo 'No build step required for static site'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test && npm run test:e2e",
    "lint": "eslint . --ext .js,.html",
    "lint:fix": "eslint . --ext .js,.html --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "accessibility": "axe-cli http://localhost:3000",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html",
    "qa:all": "npm run lint && npm run format:check && npm run test:all && npm run accessibility"
  },
  "keywords": [
    "coming-soon",
    "static-website",
    "azure",
    "responsive",
    "testing"
  ],
  "author": "Agave New Ventures",
  "license": "MIT",
  "devDependencies": {
    "serve": "^14.2.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@playwright/test": "^1.40.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "axe-core": "^4.8.2",
    "axe-cli": "^4.8.2",
    "lighthouse": "^11.4.0",
    "jsdom": "^23.0.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": ["**/tests/**/*.test.js"],
    "collectCoverageFrom": [
      "**/*.js",
      "**/*.html",
      "!**/node_modules/**",
      "!**/tests/**"
    ]
  }
}